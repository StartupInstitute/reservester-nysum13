<h1>Restaurants</h1>
<p id='notice'>
<%= notice %>
</p>

<table border="1">
<tr>
	<td><%="Name"%></td>
	<td><%="Description"%></td>
	<td><%="Address"%></td>
	<td><%="Phone Number"%></td>
</tr>

	<% @rests.each do |r| %>
	<tr>
		<td><%= r.name %> | <%= link_to 'Show', rest_path(r) %></td>
		<td><%= r.description %></td>
		<td><%= r.address %></td>
		<td><%= r.phone %></td>
	</tr>
	<% end %>

</table>
