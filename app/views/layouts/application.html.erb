<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Reservester" %></title>
    <meta name="author" content="Kashyap Bhatt">
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Reservester - Open Table clone" %>">
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
  </head>
  <body>
    <header class="navbar navbar-fixed-top">
      <nav class="navbar-inner">
        <div class="container">
          <%= render 'layouts/navigation' %>
        </div>
      </nav>
    </header>
    <div id="main" role="main" class="main">
      <div class="container">
        <div class="content">
           <div class="row">
            <div class="span12">
              <%= render 'layouts/messages' %>
              <%= yield %>
            </div>
          </div>

        </div>
      </div> <!--! end of .container -->
    </div> <!--! end of .main -->
    <br />
    <footer>
      <div class="container">
        <div class="content">
          <%= render 'layouts/footer' %>
        </div>
      </div>
    </footer> 
  </body>
</html>
