<%= form_for @restaurant,:html => {:multipart => true} do |f| %>
  <% if @restaurant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@restaurant.errors.count, "error") %> prohibited this restaurant from being saved:</h2>
      <ul>
      <% @restaurant.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field" >
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :phone %><br />
    <%= f.text_field :phone %>
  </div>
  <div>
    <p>Upload Menu: <%= f.file_field :menu %></p>
    <p>Upload Image: <%= f.file_field :image %>
      <%= f.label :remote_image_url, "or image URL" %><%= f.text_field :remote_image_url %></p>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
