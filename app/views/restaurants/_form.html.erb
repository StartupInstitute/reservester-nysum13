<%= form_for @restaurant, :html => {:multipart => true} do |f| %>
    <% if @restaurant.errors.any? %>
        <div id="errorExplanation">
            <h2><%= pluralize(@restaurant.errors.count, "error") %> prohibited this restaurant from being saved:</h2>
            <ul>
            <% @restaurant.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
            </ul>
        </div>
    <% end %>

    <div>
        <div style="float: left;">
            <div class="field">
                <%= f.label :name %><br />
                <%= f.text_field :name %>
            </div>
            <div class="field">
                <%= f.label :description %><br />
                <%= f.text_area :description, :size => "80x5" %>
            </div>
            <div class="field">
                <%= f.label :address %><br />
                <%= f.text_area :address , :size => "30x3" %>
            </div>
            <div class="field">
                <%= f.label :phone %><br />
                <%= f.text_field :phone %>
            </div>
        </div>
        <div style="float: right;">
            <div class="field">
                <%= f.label :menu %>
                <%= f.file_field :menu %>
            </div>
            <div class="field">
                <%= f.label :photo %>
                <%= f.file_field :photo %>
                <%= f.label :remote_photo_url, "or photo URL" %><%= f.text_field :remote_photo_url %>
            </div>
                <div class="actions">
                <%= f.submit %>
            </div>
        </div>
    </div>

<% end %>
