<h1>Restaurant Listing</h1>

<div class="row-fluid">
  <ul class="thumbnails">
  <% @restaurants.each do |restaurant| %>
    <li class="span3">
      <div class="thumbnail">
        <%= restaurant.image_url ? image_tag(restaurant.image_url(:thumbnail)) : "Booo!" %>
        <div class="caption">
          <h3><%= restaurant.name %></h3>
          <p><%= restaurant.description %><%= restaurant.phone %><%= restaurant.address %></p>
          <p><%= link_to 'Show', restaurant, class: 'btn btn-primary'%></p>
        </div>
      </div>
    </li>
  <% end %>
  </ul>
</div>


<%= link_to 'New Restaurant', new_restaurant_path %>
