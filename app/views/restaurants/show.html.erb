<p id="notice"><%= notice %></p>

<h1><%= @restaurant.name %></h1>
<p><%= @restaurant.description %></p>

<%= image_tag @restaurant.photo.masthead.url if @restaurant.photo? %>

<dl>
  <dt>Phone</dt>
  <dd><%= @restaurant.phone %></dd>
  <dt>Address</dt>
  <dd><%= @restaurant.address %></dd>
  <dt>Categories</dt>
  <ul>
  	<% @restaurant.categories.each do |category| %>
  		<li><%= category.name %></li>
  	<% end %>
  </ul>
	<dt>Map</dt>
  <dd><%= image_tag "http://maps.googleapis.com/maps/api/staticmap?center="+@restaurant.address+"%22&zoom=13&size=600x300&key=AIzaSyANhws2DK_qemJrhqdxZXk45IQVyDamDk4&sensor=true"%></dd>
</dl>

<%= link_to 'Edit', edit_restaurant_path(@restaurant) %> |
<%= link_to 'Destroy', restaurant_path(@restaurant), :method => :delete, :confirm => 'Are you sure that you want to delete this restaurant?' %> |
<%= link_to 'Back', restaurants_path %>
