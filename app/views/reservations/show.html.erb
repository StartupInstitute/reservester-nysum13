<p id="notice"><%= notice %></p>

<h1><%= @reservation.name %></h1>
<p><%= @reservation.description %></p>

<%= image_tag @reservation.photo.masthead.url if @reservation.photo? %>

<dl>
  <dt>Phone</dt>
  <dd><%= @reservation.phone %></dd>
  <dt>Address</dt>
  <dd><%= @reservation.address %></dd>
	<dt>Map</dt>
  <dd><%= image_tag "http://maps.googleapis.com/maps/api/staticmap?center="+@reservation.address+"%22&zoom=13&size=600x300&key=AIzaSyANhws2DK_qemJrhqdxZXk45IQVyDamDk4&sensor=true"%></dd>
</dl>

<%= link_to 'Edit', edit_reservation_path(@reservation) %> |
<%= link_to 'Destroy', reservation_path(@reservation), :method => :delete, :confirm => 'Are you sure that you want to delete this reservation?' %> |
<%= link_to 'Back', reservations_path %>
