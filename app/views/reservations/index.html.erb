<h1><center><%=@rest.name%> Reservations</center></h1>

<table class="table table-bordered">
<tr>
	<td><%="User Name"%></td>
	<td><%="Reservation Date"%></td>
	<td><%="Reservation Time"%></td>
</tr>

	<% @rest.reservations.each do |r| %>
<tr>
	<td><%= r.username %></td>
	<td><%= r.reservation_time.strftime("%a, %b %d, %Y") %></td>
	<td><%= r.reservation_time.strftime("%I:%M %p") %></td>
</tr>
	<% end %>
</table>